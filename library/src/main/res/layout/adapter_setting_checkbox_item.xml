<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapterSettingItem_relativeLayout_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="24dp"
            android:textColor="@color/md_grey_700"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adapterSettingItem_textView_label">

            <com.chargemap_beta.android.pictureLoader.library.PictureView
                android:id="@+id/adapterSettingItem_imageView_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:pv_transform="square"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginEnd="56dp"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:layout_marginStart="56dp">

                <TextView
                    android:id="@+id/adapterSettingItem_textView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/md_black_1000" />

                <TextView
                    android:id="@+id/adapterSettingItem_textView_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_700"
                    android:textSize="14sp" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/adapterSettingCheckboxItem_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>